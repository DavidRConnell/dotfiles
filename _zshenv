#!/bin/zsh

source ~/.zshlocal
export rushbin=$work/programs/bin
export JULIA_NUM_THREADS=4
export WORKON_HOME=$HOME/.local/share/virtualenvs

alias vi="nvim"
alias e="emacsclient -ca 'emacs --daemon'"
alias matlab="matlab -nodesktop -nosplash"

alias gs="git status"
alias gc="git commit"
alias gd="git diff"
alias ga="git add"

alias df="df -h"
alias du="du -h"
alias free="free -h"

alias yq="yay -Slq | fzf -m --preview 'yay -Si {1}' | xargs -ro yay -S"
alias yr="yay -Qeq | fzf -m --preview 'yay -Q1 {1}' | xargs -ro yay -Rs"

alias pc="printcsv -s\"|\""
alias svg="feh -x --reload 1 --conversion-timeout 1"

# Run with md2pdf file.pdf file.md
alias md2pdf="pandoc -V geometry:margin=1in --pdf-engine=xelatex --variable mainfont=Helvetica -f gfm -o"

# CD work
function cdrush {
	cd $work/"$@"
}

function cddot {
	cd $HOME/dotfiles_and_friends/"$@"
}

compctl -/ -W "$work" cdrush
compctl -/ -W "$HOME/dotfiles_and_friends" cddot
compctl -g '*.ppt*' pptx2pdf
compctl -g '*.docx' docx2pdf
