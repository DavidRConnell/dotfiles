colorscheme dracula
set vicmd=nvim
set wildmenu
set wildstyle=popup
set confirm=
set caseoptions=p
set number relativenumber
only

" Searching and autocomplete
set ignorecase
set smartcase
set incsearch
set hlsearch

" Command-line mode
nnoremap ; :
cnoremap <C-a> <home>
cnoremap <C-f> <right>
cnoremap <C-b> <left>
cnoremap <C-n> <down>
cnoremap <C-p> <up>

" Remap
nnoremap J L
nnoremap K H
nnoremap v :view<CR>

" Hotkeys
nnoremap q :q<CR>

" Use comma like <leader>
nnoremap ,v :!alacritty -e nvim %f &<CR>
nnoremap ,e :!emacsclient -c %f &<CR>
nnoremap ,g :goto<space>
nnoremap ,b :bmgo<space><tab>
nnoremap ,cd :cd <C-x>d<CR>
nnoremap ,t :!zsh<CR>
nnoremap ,. :edit $MYVIFMRC | restart<CR>

" Tabs/splits
nnoremap { :tabprevious<CR>
nnoremap } :tabnext<CR>
nnoremap <C-t> :tabnew %c<CR>
nnoremap <C-s> :vsplit<CR>

" Opening and viewing
filetype *.pdf zathura %f &
filetype *.html w3m
filetype * open-xdg

fileviewer *.md
	\ pandoc -t html %c | w3m -T text/html
