colorscheme dracula
set vicmd=nvim
set wildmenu
set wildstyle=popup
set confirm=
set number relativenumber

" Searching and autocomplete
set ignorecase
set smartcase
set incsearch
set hlsearch

" Command-line mode
nnoremap ; :
cnoremap <C-a> <home>
cnoremap <C-f> <right>
cnoremap <C-b> <left>
cnoremap <C-n> <down>
cnoremap <C-p> <up>

" Remap
nnoremap J L
nnoremap K H

" Hotkeys
nnoremap q :q<CR>

" Use comma like <leader>
nnoremap ,v :view<CR>
nnoremap ,g :goto<space>
nnoremap ,b :bmgo<space><tab>
nnoremap ,cd :cd <C-x>d<CR>
nnoremap ,t :!zsh<CR>
nnoremap ,. :edit $MYVIFMRC | restart<CR>

" Tabs/splits
nnoremap { :tabprevious<CR>
nnoremap } :tabnext<CR>
nnoremap <C-t> :tabnew %c<CR>
nnoremap <C-s> :vsplit<CR>

" Opening and viewing
filetype *.pdf open
filetype *.html w3m

fileviewer *.md
	\ pandoc -t html %c | w3m -T text/html
