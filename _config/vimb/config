set download-path=~/Downloads
set editor-command="nvim"
set incsearch=true

set default-font=DejaVu Sans
set monospace-font=DejaVu Sans Mono
set sans-serif-font=DejaVu Sans
set serif-font=DejaVu Serif

nnoremap ; :
nnoremap H ^
nnoremap L $
nnoremap ZZ :quit<CR>
nnoremap <C-d> :quit<CR>
nnoremap b :open !
nnoremap B :tabopen !

cnoremap <C-p> <Up>
cnoremap <C-n> <Down>
nnoremap <C-p> <Up>
nnoremap <C-n> <Down>

set default-zoom=110
nnoremap + zI
nnoremap - zO
nnoremap = zz

shortcut-add sch=https://scholar.google.com/scholar?hl=en&as_sdt=0%2C14&q=$0&oq=
