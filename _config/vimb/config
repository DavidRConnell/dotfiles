set download-path=~/Downloads
set editor-command="nvim"
set incsearch=true

set default-font=DejaVu Sans
set monospace-font=DejaVu Sans Mono
set sans-serif-font=DejaVu Sans
set serif-font=DejaVu Serif

nnoremap ; :
nnoremap H ^
nnoremap L $
nnoremap ZZ :quit<CR>
nnoremap <C-R> :e! simplyread();<CR>
nnoremap b :open !
nnoremap B :tabopen !

cnoremap <C-P> <Up>
cnoremap <C-N> <Down>
