set font "DejaVu Sans Mono 12"

set incremental-search "true"
set statusbar-home-tilde "true"
set window-title-basename "true"
set selection-clipboard clipboard

map <C-/> nohlsearch
map + zoom in
map - zoom out
map ZZ quit
map <C-d> quit

set highlight-active-color "#a9a1e1"
set highlight-transparency 0.3
set inputbar-bg "#282c34"
set inputbar-fg "#a9a1e1"
set completion-bg "#282c34"
set completion-fg "#a9a1e1"
set completion-highlight-bg "#a9a1e1"
set completion-highlight-fg "#282c34"
set statusbar-bg "#a9a1e1"
set statusbar-fg "#282c34"
