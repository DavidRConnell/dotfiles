set nocompatible

" General Vim
set updatetime=100
set nobackup
set noswapfile

" Colors and fonts
set background=dark

" Show invisibles
set list

" Searching and autocomplete
set ignorecase
set smartcase
set showmatch
set incsearch
set hlsearch

" Leader shortcuts
nnoremap <space> <Nop>

	"Save and quit
nnoremap <space>w :w<CR>
nnoremap <space>q :q<CR>
nnoremap <space>wq :wq<CR>
nnoremap <space>Q :qa<CR>

	"Comments
nnoremap <space>cl <D-/>

	" Search and replace all in line or visual selection.
nnoremap <space>r :s//g<left><left>
nnoremap <space>R :%s//g<left><left>
onoremap s //+0<left><left><left>

	" Increment and deincrement
nnoremap <space>+ <C-a>
nnoremap <space>- <C-x>

	" Change surrounding parenthesis/brackets.
nnoremap <space>( mt%r)`tr(
nnoremap <space>{ mt%r}`tr{
nnoremap <space>[ mt%r]`tr[

nnoremap <space>) mt%r(`tr)
nnoremap <space>} mt%r{`tr}
nnoremap <space>] mt%r[`tr]

" Remap
nnoremap ; :
nnoremap Y y$
