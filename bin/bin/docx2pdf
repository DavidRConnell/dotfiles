#! /bin/bash

if ! [ -f "$1" ]; then
    echo "$1 does not exist."
    exit 1
fi

if [ "$#" -ne 1 ]; then
    echo "Should have exactly one argument."
    exit 2
fi

name=${1%.*}
ext=${1#*.}

if [ "$ext" != "docx" ]; then
    echo "Input should be a docx file."
    exit 3
fi

pandoc -i "$1" -o "$name".pdf
