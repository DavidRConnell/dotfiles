# Add ~/bin to path
export PATH=$HOME/bin:$PATH

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="robbyrussell"
zstyle ':completion:*' menu select

plugins=(
	git
	vi-mode
	colored-man-pages
	osx
)
export KEYTIMEOUT=1

source $ZSH/oh-my-zsh.sh

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
	export EDITOR='vim'
else
	export EDITOR='nvim'
fi

unsetopt inc_append_history
unsetopt share_history

# Custom key bindings
bindkey -a k history-beginning-search-backward
bindkey -a j history-beginning-search-forward

# ssh
export SSH_KEY_PATH="~/.ssh/rsa_id"

source $HOME/.zshlocal
source ~/.config/accounts
export rushbin=$work/programs/bin

alias vi="nvim"
alias matlab="matlab -nodesktop -nosplash"
alias mutt="neomutt"

alias gs="git status"
alias gc="git commit"
alias gd="git diff"
alias ga="git add"

alias df="df -h"
alias du="du -h"
alias free="free -h"

alias to="todo.sh"

# Run with md2pdf file.pdf file.md
alias md2pdf="pandoc -V geometry:margin=1in --pdf-engine=xelatex --variable mainfont=Helvetica -f gfm -o"

# CD work
function cddata {
	cd $work/data/"$@"
}

function cdprog {
	cd $work/programs/"$@"
}

function cdcron {
	cd $work/cronscripts/"$@"
}

function cddoc {
	cd $work/docs/"$@"
}

function cdpres {
	cd $work/presentations/"$@"
}

function cddot {
	cd $HOME/dotfiles_and_friends/"$@"
}

compctl -/ -W "$work/data" cddata
compctl -/ -W "$work/programs" cdprog
compctl -/ -W "$work/cronscripts" cdcron
compctl -/ -W "$work/docs" cddoc
compctl -/ -W "$work/presentations" cdpres
compctl -/ -W "$HOME/dotfiles_and_friends" cddot
